    "version": "2.0.0",
    "tasks": [
        {
            "label": "Celery start",
            "type": "shell",
            "command": "/etc/init.d/celeryd start && /etc/init.d/celerybeat start"
        },
        {
            "label": "Celery stop",
            "type": "shell",
            "command": "/etc/init.d/celeryd stop && /etc/init.d/celerybeat stop"
        },
    ]
}